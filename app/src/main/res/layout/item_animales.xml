<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">


    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="454dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_especie"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="15dp"
            android:layout_y="16dp"
            android:text="This text is underlined"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="15dp"
            android:layout_y="53dp"
            android:text="@string/clase"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_clase"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="15dp"
            android:layout_y="83dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="15dp"
            android:layout_y="116dp"
            android:text="@string/Descripción_p"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="15dp"
            android:layout_y="145dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="15dp"
            android:layout_y="179dp"
            android:text="@string/Presentación"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_presentacion"
            android:layout_width="323dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:layout_x="14dp"
            android:layout_y="211dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="335dp"
            android:layout_height="194dp"
            android:layout_x="10dp"
            android:layout_y="247dp"
            card_view:srcCompat="@drawable/animals" />

    </AbsoluteLayout>

</android.support.v7.widget.CardView>
